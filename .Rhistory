BuildLinePlot <- function(data, x.var, y.var, x.label, y.label, title, color.var){
p <- plot_ly(data = data,
x = data[[x.var]],
y = data[[y.var]],
type = "scatter",
marker = list(size = 20,
line = list(color = 'rgba(0, 0, 0, .8)',
width = 2),
opacity = 0.7)) %>%
layout(title = title,
yaxis = list(title = x.label),
xaxis = list(title = y.label))
return(p)
}
